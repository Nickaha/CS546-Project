<main>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/user">Homepage</a>
            <a class="nav-item nav-link active" href="/user/dashboard">My dashboard</a>
            <a class="nav-item nav-link active" href="https://www.coindesk.com/price/bitcoin" target="_blank">Bitcoin Price</a>
            <a class="nav-item nav-link active" href="/aboutus">About</a>
            <a class="nav-item nav-link active" href="/user/logout">Logout</a>
        </div>
    </nav>
    <h1>My Bids</h1>
    {{#if message}}
        <div>{{message}}</div> 
    {{/if}}
    {{#if NFT}}
        {{#each NFT}}
    
    <div class="card" style="width: 18rem;">
        <a href={{this.url}}><img class="card-img-top" src= {{this.image}} alt="NFT image"></a>
        <div class="card-body">
            <h4 class="card-title"><b>Auction Ends: {{this.expire}}</b></h4>
            <p>{{this.desc}}</p>
            <p>Highest Bid: {{this.highestbid}}</p>
            <p>My Bid: {{this.mybid}}</p>
        </div>
    </div>
    {{/each}}
    {{/if}}
</main>