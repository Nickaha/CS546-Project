        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button id="s" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </nav>

    
    <div class="container">
        <h1>NFT Marketplace</h1>
    <div class="row h-100" >
        {{#if NFT}}
        {{#each NFT}}
        <div class="card" style="width: 18rem;">
            <a href={{this.url}}><img class="card-img-top" src= {{this.image}} alt="NFT image"></a>
            <div class="card-body">
                <h2 class="card-title"><b>Auction Ends: {{this.expire}}</b></h2>
                <p>{{this.user}}</p> <!--This doesn't work, user is not saved to listings -->
                <p>{{this.desc}}</p>
                <p>Highest Bid: {{this.highestbid}}</p>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div>No current listings</div>
        {{/if}}
    </div>
    </div>
